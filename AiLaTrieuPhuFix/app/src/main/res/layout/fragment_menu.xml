<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/logoMargin"
        android:src="@drawable/icon_logo_in_app"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/btn_play"
        android:layout_width="@dimen/buttonPlayWidth"
        android:layout_height="@dimen/buttonPlayHeight"
        android:background="@drawable/btn_play_selector"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>